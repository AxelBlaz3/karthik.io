---
// src/components/BentoItem.astro
interface Props {
  title: string;
  description: string;
  icon?: string; // Optional emoji or SVG string
  span?: string; // 'col-span-1' or 'col-span-2' for size control
  tags?: string[];
  href?: string;
}

const { title, description, icon, span = "col-span-1", tags = [], href = "#" } = Astro.props;
---

<a href={href} class={`
  group relative overflow-hidden rounded-xl bg-astro-800/50 border border-astro-700 
  hover:border-accent-primary/50 transition-all duration-300 hover:shadow-[0_0_30px_-10px_rgba(255,93,1,0.2)]
  flex flex-col p-6 h-full ${span}
`}>
  
  <div class="absolute inset-0 bg-gradient-to-br from-accent-primary/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <div class="relative z-10 flex flex-col h-full">
    <div class="flex items-center justify-between mb-4">
      <div class="p-2 rounded-lg bg-astro-900/50 border border-astro-700/50 text-2xl">
        {icon || "ðŸš€"}
      </div>
      <div class="opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 text-accent-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 17l9.2-9.2M17 17V7H7"/></svg>
      </div>
    </div>

    <h3 class="text-xl font-bold text-slate-100 mb-2">{title}</h3>
    <p class="text-slate-400 text-sm leading-relaxed mb-6 flex-1">
      {description}
    </p>

    <div class="flex flex-wrap gap-2 mt-auto">
      {tags.map((tag) => (
        <span class="text-xs font-mono px-2 py-1 rounded bg-astro-900/80 border border-astro-700/50 text-slate-400 group-hover:text-accent-primary group-hover:border-accent-primary/30 transition-colors">
          {tag}
        </span>
      ))}
    </div>
  </div>
</a>