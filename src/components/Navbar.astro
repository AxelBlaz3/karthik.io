---
const links = [
  { text: "Home", href: "/" },
  { text: "Projects", href: "/projects" },
  { text: "Blog", href: "/blog" }, // <--- Added this
  { text: "About", href: "/about" },
  { text: "Contact", href: "/contact" },
];

const { pathname } = Astro.url;
---

<nav
  class="border-b border-astro-800 bg-astro-950/80 backdrop-blur-md sticky top-0 z-50"
>
  <div class="max-w-3xl mx-auto px-6 h-16 flex items-center justify-between">
    <a
      href="/"
      class="font-bold text-white text-lg tracking-tight hover:text-accent-primary transition-colors"
    >
      karthikgaddam<span class="text-accent-primary">.com</span>
    </a>

    <div class="flex items-center gap-6">
      <div class="hidden sm:flex gap-6 text-sm font-medium">
        {
          links.map((link) => {
            // Highlight active link logic
            const isActive =
              pathname === link.href ||
              (link.href !== "/" && pathname.startsWith(link.href));
            return (
              <a
                href={link.href}
                class:list={[
                  "transition-colors",
                  isActive ? "text-white" : "text-slate-400 hover:text-white",
                ]}
              >
                {link.text}
              </a>
            );
          })
        }
      </div>

      <div class="hidden sm:block h-4 w-px bg-astro-800"></div>

      <a
        href="https://github.com/AxelBlaz3"
        target="_blank"
        aria-label="GitHub Profile"
        class="text-slate-400 hover:text-white transition-colors"
      >
        <svg
          viewBox="0 0 24 24"
          aria-hidden="true"
          class="h-5 w-5 fill-current"
        >
          <path
            fill-rule="evenodd"
            clip-rule="evenodd"
