---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Karthik | Mobile & Systems Engineer" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-astro-900 text-slate-300 antialiased selection:bg-accent-primary/30 selection:text-white">
        <Navbar />
        
        <div class="pt-16"> 
		    <slot />
        </div>
	</body>
</html>